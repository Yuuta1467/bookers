<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="application.css">
  </head>
  <body>
    <h1>Editing Book</h1>

    <%= form_with model: @book, url:book_path(@book.id), method: :patch do |f| %>

        <h3>Title</h3>
        <%= f.text_field :title %>

        <h3>Body</h3>
        <%= f.text_area :body %>

      <%= f.submit 'Update Book' %>
      <%= link_to "show", book_path(@book.id) %>


    <% end %>
  </body>
</html>
