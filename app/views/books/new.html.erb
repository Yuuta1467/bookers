<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="application.css">
  </head>
  <body>
    <p id="notice"></p>
    <h1>Books</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    </table>
    <h2>New book</h2>
    <form class="new_book" id="new_book" action="/books" accept-charser="UTF-8" method="post">
      <div class="field">
        <label for="book_title">Title</Label>
        <input class="book_title" type="text" name="book[title]" id="book_title">
      </div>
      <div class="field">
        <label for="book_body">Body</label>
        <textarea class="book_body" name="book[body]" id="book_body"></textarea>
      </div>
        <div class="action">
          <input type="submit" name="commit" value="Create Book" date-disable-with="Create Book">
        </div>
    </form>
</html>